generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String     @id @default(uuid())
  name          String
  description   String
  image         String?
  category      String
  material      String
  price         String
  discountPrice String?
  CartItem      CartItem[]

  @@map("products")
}

model CartItem {
  id        String @id @default(uuid())
  productId String
  amount    Int

  product Product @relation(fields: [productId], references: [id])

  @@map("cart_items")
}

model Order {
  id         String   @id @default(uuid())
  totalPrice String
  email      String
  phone      String
  address    String
  city       String
  state      String
  zipCode    String
  createdAt  DateTime @default(now())

  @@map("orders")
}
